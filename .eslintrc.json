{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes" : [
            "error",
            "single"
        ],
        "react/prop-types": [
            "off",
            {
                "ignore": [
                    "children",
                    "className",
                    "style",
                    "text"
                ]
            }
        ]
    }
}
